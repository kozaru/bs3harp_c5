doctype
html(lang="ja")
	head
		meta(charset="utf-8")
		title= pagename
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		link(rel="stylesheet" href="css/main.css")
		//- for IE8
		//- <!--[if lt IE 9]>
		//- script(src="js/html5shiv.min.js", type="text/javascript")
		//- script(src="js/respond.min.js", type="text/javascript")
		//- link(href="css/htmlie8.css", rel="stylesheet", type="text/css")
		//- <![endif]-->
	body
		block main
			.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
				.container
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="index.html")= sitetitle
					.collapse.navbar-collapse
						ul.nav.navbar-nav
							for article, slug in public._data
								li
									a(href="#{ slug }.html")= article.pagename
		!= yield
		script(src="js/jquery.min.js")
		script(src="js/bootstrap.min.js")
		script(src="js/custom.js")
